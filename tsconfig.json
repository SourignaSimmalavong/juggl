{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2020",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2020",
      "dom.iterable"
    ],
    "esModuleInterop": true,
    "types": [
      "node",
      "svelte",
      "cytoscape"
    ],
    "paths": {
      "src": [
        "*"
      ]
    },
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "include": [
    "./**/*"
  ]
}